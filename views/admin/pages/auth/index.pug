extends ../../layout/auth.pug
include ../../mixins/alert.pug
//- ô backend phải tạo ra url còn ô front end chỉ sử dụng url đó mà thôi
block main
    link(rel="stylesheet" href="/admin/css/style.css")
    +alert_error(5000)
    .container.my-5 
        .row.justify-content-center
            .col-6 
                h1(class="text-center") Đăng nhập
                form(
                    action=`${prefixAdmin}/auth/login`
                    method="POST"
                )
                    div(class="form-group")
                        label(for="email") Email 
                        input(
                            type="text"
                            class="form-control"
                            id="email"
                            name="email"
                            required
                        )
                    div(class="form-group")
                        label(for="password") Mật khẩu
                        input(
                            type="password"
                            class="form-control"
                            id="password"
                            name="password"
                            required
                        )
                    div(class="form-group")
                        button(
                            type="submit"
                            class="btn btn-primary btn-block"
                        ) Đăng nhập
                    
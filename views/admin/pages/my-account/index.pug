extends ../../layout/default.pug

block main 
    h1(class="mb-4") Thông tin cá nhân
    if(user.avatar)
        img(src=user.avatar width="150px" class="mb-3")
    else 
        img(src="/admin/images/avatar.png" width="150px" class="mb-3")
    if(user.fullName)
        p(class="mb-4") Họ tên: <b>#{user.fullName}</b>
    if(user.email)
        p(class="mb-4") Email: <b>#{user.email}</b>
    if(user.phone)
        p(class="mb-4") Số điện thoại: <b>#{user.phone}</b>
    p
        span Trạng thái:
        span 
            <b> #{user.status==="active" ? "Hoạt động" :"Dừng hoạt động "} </b>
    if(role.title)
        p(class="mb-4") Phân quyền: <b>#{role.title}</b>
    a(
        href=`${prefixAdmin}/my-account/edit/`
        class="btn btn-warning btn-lg"
    ) Chỉnh Sửa thông tin
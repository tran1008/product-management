extends ../../layout/default.pug
include ../../mixins/table-tree.pug
//- nên nhớ thuộc tính chỉ gán bằng dấu bằng ko bao giờ gán bằng dấu hai chấm
//- tạo một hộp thoại checkbox xong dùng form để gửi lên
//-check nếu người ta biết link đó chẳng may họ vào th
block main
    if(role.permission.includes("product-category-view"))  
        h1 Danh mục sản phẩm 
        .card.mb-3 
            .card-header Danh sách 
                .card-body
                    .row
                        .col-8
                        .col-4
                            if(role.permission.includes("product-category-create"))
                                a(
                                    href=`${prefixAdmin}/products-category/create`
                                    class="btn btn-outline-success"
                                ) +Thêm mới
                            
                    table(
                        class="table table-hover table-sm"
                        checkbox-multi
                    )   
                        thead
                            tr
                                th 
                                    input(type="checkbox" name="checkall")  
                                th STT 
                                th Hình ảnh 
                                th Tiêu đề
                                th Vị trí
                                th Trạng thái 
                                th Hành động
                        tbody
                            +table-tree(records)
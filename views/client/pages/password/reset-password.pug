extends ../../layout/default.pug
include ../../mixin/alert.pug
//- ô backend phải tạo ra url còn ô front end chỉ sử dụng url đó mà thôi
block main
    +alert_error(5000)
    .container.my-5 
        .row.justify-content-center
            .col-6 
                h1(class="text-center") Dổi mật khẩu
                form(
                    action="/user/password/reset"
                    method="POST"
                )
                    div(class="form-group")
                        label(for="password") Mật khẩu mới 
                        input(
                            type="password"
                            class="form-control"
                            id="password"
                            name="password"
                            required
                        )
                    div(class="form-group")
                        label(for="otp") Xác nhận mật khẩu
                        input(
                            type="password"
                            class="form-control"
                            id="confirmPassword"
                            name="confirmPassword"
                            required
                        )
                    div(class="form-group")
                        button(
                            type="submit"
                            class="btn btn-primary btn-block"
                        ) Đổi mật khẩu
                    